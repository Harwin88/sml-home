{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Preguntas Frecuentes"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "answer": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "general",
        "technical",
        "account",
        "search",
        "payments",
        "security",
        "providers"
      ],
      "required": true,
      "default": "general"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "icon": {
      "type": "string",
      "maxLength": 50
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "helpfulCount": {
      "type": "integer",
      "default": 0
    },
    "notHelpfulCount": {
      "type": "integer",
      "default": 0
    },
    "keywords": {
      "type": "json"
    },
    "relatedFaqs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::faq.faq"
    },
    "videoUrl": {
      "type": "string",
      "maxLength": 500
    },
    "attachment": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    }
  }
}

